<% if @post %>
	<div class="post container">
		<h3><%= @post.title %></h3>
		<a class="user" href="/users/<%= @post.user.id %>"><%= @post.user.name %></a>
		<span><%= @post.created_at %></span>
		<span><%= @post.updated_at %></span>
		<p><%= @post.content %></p>
	</div>
	Comments:
	<div class = "comments container">
		<% @post.comments.each do |comment| %>
			<div class="meta">
				<a class="user" href="/users/<%= comment.user.id %>"><%= comment.user.name %></a>
				<span><%= comment.created_at %></span>
				<span><%= comment.updated_at %></span>
			</div>
			<p><%= comment.content %></p>
		<% end %>
<% end %>